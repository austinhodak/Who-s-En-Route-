    <RelativeLayout
        android:id="@+id/dialog_alert_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/statusbar_background"
        android:elevation="2dp">

        <TextView
            android:id="@+id/dialog_alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:gravity="center_horizontal"
            android:text="GVFD Notifications"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INCIDENT NOTIFICATIONS"
                android:textStyle="bold"
                android:textColor="@color/new_accent"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <Switch
                    android:id="@+id/deptNotify_Master"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:text="Enable Notifications"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/deptNotify_Sound"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/text_responding_name"
                    android:text="Notification Sound"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <Switch
                    android:id="@+id/deptNotify_Screen"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:checked="true"
                    android:textColor="@color/text_responding_name"
                    android:text="Turn Screen on for New Incidents"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <Switch
                    android:id="@+id/deptNotify_Vibrate"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:checked="true"
                    android:textColor="@color/text_responding_name"
                    android:text="Vibrate on Notification"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TONES NOTIFICATION"
                android:textStyle="bold"
                android:textColor="@color/new_accent"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <Switch
                    android:id="@+id/deptNotify_Tones_Enable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:text="Enable Tones Notifications"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MANPOWER NOTIFICATION"
                android:textStyle="bold"
                android:textColor="@color/new_accent"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <Switch
                    android:id="@+id/deptNotify_Manpower_Enable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:text="Enable Manpower Notifications"
                    android:layout_marginBottom="16dp"
                    android:textSize="16sp" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>