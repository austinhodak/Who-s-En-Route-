<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#FFFFFF"
    android:layout_margin="8dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:minWidth="270dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HELICOPTER LANDING ZONE"
            android:textStyle="normal|bold"
            android:id="@+id/map_marker_title"
            android:textColor="#8A000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(41.000000, -79.000000)"
            android:id="@+id/map_marker_subtitle"
            android:textColor="#8A000000"
            android:textSize="14sp" />

    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IN SERVICE"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:textColor="@color/md_green_500"
            android:id="@+id/marker_service"
            android:gravity="right" />

    </LinearLayout>

    <View
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_divider_black"/>

    <TextView
        android:id="@+id/map_marker_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friendship Field"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/hydrant_ll1"
        android:visibility="visible"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flow Rate:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500-999 GPM"
                android:textColor="#8A000000"
                android:id="@+id/map_hydrant_fr" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outlet Size:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='4" &amp; 2-1/2"'
                android:textColor="#8A000000"
                android:id="@+id/map_hydrant_size" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hydrant"
                android:textColor="#8A000000"
                android:id="@+id/map_hydrant_type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outlets:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#8A000000"
                android:id="@+id/map_hydrant_outlets" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textColor="#000"
        android:id="@+id/section"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/map_marker_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Route 27, Pittsfield, PA"
        android:textSize="14sp"
        android:textColor="#8A000000"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textColor="#000"
        android:id="@+id/section2"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/map_marker_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Information"
        android:maxLines="3"
        android:textSize="14sp"
        android:textColor="#8A000000"
        android:textStyle="bold"
        android:lines="2" />

</LinearLayout>