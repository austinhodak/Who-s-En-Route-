<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/apparatus_info_alert_card"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/primary"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALERT"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:textStyle="normal|bold"
                android:textColor="#FFFFFF"
                android:id="@+id/textView" />

            <TextView
                android:id="@+id/alert_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHIEF"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:textStyle="normal|bold"
                android:textColor="#FFFFFF"
                android:layout_toLeftOf="@+id/alert_time"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/alert_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/16"
                android:textSize="14sp"
                android:textStyle="normal|bold"
                android:textColor="#FFFFFF"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/apparatus_alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:layout_marginBottom="4dp"
            android:text="OUT OF SERVICE"/>

        <TextView
            android:id="@+id/apparatus_alert_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFF"
            android:layout_marginBottom="16dp"
            android:text="654 IS OUT OF SERVICE UNTIL FURTHER NOTICE."/>

    </LinearLayout>

</android.support.v7.widget.CardView>