<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.fireapps.firedepartmentmanager.EditProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/edit_profile_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:id="@+id/editProfile_dob"
            android:nextFocusDown="@+id/signUp_FullName"
            app:met_baseColor="#FFF"
            app:met_primaryColor="#FFF"
            app:met_floatingLabel="normal"
            android:layout_marginTop="8dp"
            android:inputType="date" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:id="@+id/editProfile_phone"
            android:nextFocusDown="@+id/signUp_FullName"
            app:met_baseColor="#FFF"
            app:met_primaryColor="#FFF"
            app:met_floatingLabel="normal"
            android:layout_marginTop="8dp"
            android:inputType="phone" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:id="@+id/editProfile_Address"
            android:nextFocusDown="@+id/signUp_FullName"
            app:met_baseColor="#FFF"
            app:met_primaryColor="#FFF"
            app:met_floatingLabel="normal"
            android:layout_marginTop="8dp"
            android:inputType="textPostalAddress" />

    </LinearLayout>

    </ScrollView>

    <com.github.jorgecastilloprz.FABProgressCircle
        android:id="@+id/signup_fab_progress"
        app:arcColor="@color/md_orange_500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/signup_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_white_24dp"
            app:fab_colorNormal="#FF9100"
            app:fab_colorPressed="#FFAB40"
            app:fab_colorRipple="#FFD180" />

    </com.github.jorgecastilloprz.FABProgressCircle>

</RelativeLayout>
